#include <stdio.h>

int main() {

	float num1, num2, num3;
	float average;

	printf("Enter 1st number: ");
	fflush(stdout);
	scanf("%f",&num1);
	printf("\nEnter 2nd number: ");
	fflush(stdout);
	scanf("%f",&num2);
	printf("\nEnter 3rd number: ");
	fflush(stdout);
	scanf("%f",&num3);
	average = (num1 + num2 + num3) / 3;
	printf("\nAverage: %f",average);
	printf("\nPress enter to exit");
	while(getchar() != '\n') {

	}
	getchar();

	return 0;
}
